<button class="btn btn-primary" type="button" @onclick="OnAddBadgeClicked">Add Badge</button>

@code {
    private List<SharedClasses.Models.Badge>? _badges;

    protected async override Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        _badges = await http.Anonymous.GetFromJsonAsync<List<Shared.Models.Badge>>(@"/api/Badges/") ?? new List<Shared.Models.Badge>();
    }

    protected void OnAddBadgeClicked()
    {
        // NT - changed to /badges/edit so that user can go to edit page
        navManager.NavigateTo("/badges/edit");
        //navManager.NavigateTo("/Badge/0");
    }

    protected async Task OnDeleteBadgeClickedAsync(Shared.Models.Badge badge)
    {
        if (await MessageService.Confirm("Are you sure you want to delete this badge?", "Confirmation"))
        {
            Console.WriteLine("OK Clicked");
            //NT - changed 'Secure' to 'Anonymous' so I can access delete button
            var result = await http.Anonymous.DeleteAsync($"/api/Badges/{badge.Id}");
            _badges?.Remove(badge);
        }
        else
        {
            Console.WriteLine("Cancel Clicked");
        }
    }
}
